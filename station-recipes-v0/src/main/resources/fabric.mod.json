{
  "schemaVersion": 1,
  "id": "station-recipes-v0",
  "version": "${version}",

  "name": "Station Recipes (v0)",
  "description": "Recipes API for mods to add new crafting/smelting/etc recipes.",
  "authors": [
    "Modification Station",
    "FloofyPlasma"
  ],
  "contact": {
    "homepage": "https://github.com/FloofyPlasma/StationAPI",
    "sources": "https://github.com/FloofyPlasma/StationAPI",
    "issues": "https://github.com/FloofyPlasma/StationAPI/issues"
  },

  "license": "MIT",
  "icon": "assets/station-recipes-v0/icon.png",

  "environment": "*",
  "entrypoints": {
    "stationapi:event_bus": [
      "com.floofyplasma.stationapi.impl.recipe.json.JsonRecipeParserRegisterImpl",
      "com.floofyplasma.stationapi.impl.recipe.JsonRecipeParserInit",
      "com.floofyplasma.stationapi.impl.recipe.JsonRecipesLoader",
      "com.floofyplasma.stationapi.api.recipe.FuelRegistry"
    ]
  },
  "mixins": [
    "station-recipes-v0.mixins.json"
  ],

  "depends": {
    "fabricloader": "*",
    "minecraft": "1.0.0-alpha.1.2.1"
  },

  "custom": {
    "modmenu:api": true
  }
}
